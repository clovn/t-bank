<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tripInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:elevation="8dp"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/tripNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ScreenTitleText"
            tools:text="Название поездки"/>

        <TextView
            android:id="@+id/tripDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tripNameTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            style="@style/HintText"
            tools:text="22.07 - 30.07" />

        <ImageView
            android:id="@+id/tripPeopleCountIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tripDateTv"
            app:layout_constraintTop_toBottomOf="@id/tripNameTv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/tripPeopleCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HintText"
            app:layout_constraintTop_toBottomOf="@id/tripNameTv"
            app:layout_constraintStart_toEndOf="@id/tripPeopleCountIv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            tools:text="4"/>

        <TextView
            android:id="@+id/tripBudgetTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tripDateTv"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/ScreenTitleText"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="1 000 000 ₽"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tripExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tripInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background">

        <TextView
            android:id="@+id/tripExpensesTv"
            style="@style/ScreenTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/expenses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/expenseTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            style="@style/ScreenTitleText"
            tools:text="453 345 ₽"/>

        <com.example.tbank.presentation.customView.ProgressBar
            android:id="@+id/tripExpensesPb"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/tripExpensesTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="16dp"
            app:progress="50"
            android:layout_marginVertical="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tripExpenses"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:background="@drawable/rounded_background"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addExpensesBtn"
            style="@style/ScreenTitleText"
            android:text="@string/add_expenses"/>

        <ImageButton
            android:id="@+id/addExpensesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/transparent"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>