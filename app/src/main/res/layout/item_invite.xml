<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iconBackIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/invite_background_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iconBackIv"
        app:layout_constraintStart_toStartOf="@id/iconBackIv"
        app:layout_constraintEnd_toEndOf="@id/iconBackIv"
        app:layout_constraintBottom_toBottomOf="@id/iconBackIv"
        android:src="@drawable/ic_invitation" />

    <TextView
        android:id="@+id/categoryTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Билеты на самолет"
        style="@style/Title"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconBackIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>